<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backgroud"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/titleBar"
        layout="@layout/titlebar" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space_1dp"
        android:background="@color/color_seperator" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space_1dp"
        android:layout_marginTop="@dimen/space_3x"
        android:background="@color/color_seperator" />

    <LinearLayout
        android:id="@+id/settings_feedback_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:paddingRight="@dimen/space_3x" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="@dimen/space_3x"
            android:text="@string/setting_feedback"
            android:textColor="@color/text"
            android:textSize="@dimen/size_l" />

        <TextView
            android:id="@+id/settings_feedback_unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:padding="@dimen/space_3x"
            android:text=""
            android:textColor="@color/red"
            android:textSize="@dimen/size_m" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space_1dp"
        android:background="@color/color_seperator" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space_1dp"
        android:layout_marginTop="@dimen/space_3x"
        android:background="@color/color_seperator" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:paddingRight="@dimen/space_3x" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="@dimen/space_3x"
            android:text="@string/setting_reply_auto_tts"
            android:textColor="@color/text"
            android:textSize="@dimen/size_l" />

        <ToggleButton
            android:id="@+id/settings_tb_tts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_checkbox"
            android:checked="false"
            android:gravity="center"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space_1dp"
        android:background="@color/color_seperator" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:paddingRight="@dimen/space_3x" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="@dimen/space_3x"
            android:text="@string/setting_msg_no_disturb"
            android:textColor="@color/text"
            android:textSize="@dimen/size_l" />

        <ToggleButton
            android:id="@+id/settings_tb_disturb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_checkbox"
            android:checked="false"
            android:gravity="center"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space_1dp"
        android:layout_marginTop="@dimen/space_3x"
        android:background="@color/color_seperator" />

</LinearLayout>