<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backgroud"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/rootView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/titlebar_bg"
                android:orientation="vertical" >

			    <TextView
			        android:id="@+id/actionbar_back"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:drawableLeft="@mipmap/ic_arrow_back_white_24dp"
			        android:padding="@dimen/space_2x"
			        android:textColor="@color/white"
			        android:textSize="@dimen/size_l" />
                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dip"
                    android:src="@mipmap/logo" />

                <LinearLayout
                    android:id="@+id/ll_appname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_icon"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_appname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/space_2x"
                        android:paddingTop="@dimen/space_2x"
                        android:text="@string/app_name_about"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_2xl" />

                    <TextView
                        android:id="@+id/tv_appinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/space_2x"
                        android:paddingTop="@dimen/space"
                        android:text="@string/app_name_about_info"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_l" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/ll_appname"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginRight="@dimen/space_2x"
                    android:padding="@dimen/space"
                    android:src="@drawable/about_evaluate_selector" />

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/ll_appname"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginRight="@dimen/space_2x"
                    android:layout_toLeftOf="@id/iv_evaluate"
                    android:padding="@dimen/space"
                    android:src="@drawable/about_share_selector" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/space_1dp"
                android:layout_marginTop="@dimen/space_3x"
                android:background="@color/color_seperator" />

            <LinearLayout
                android:id="@+id/ll_qr_code"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clickable="true"
                android:padding="@dimen/space_2x" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/about_qr_code"
                    android:textColor="@color/text_h"
                    android:textSize="@dimen/size_xl" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/space"
                    android:src="@mipmap/icon_qr_code" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/space_1dp"
                android:background="@color/color_seperator" />

            <LinearLayout
                android:id="@+id/ll_qq_group"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clickable="true"
                android:padding="@dimen/space_2x" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/about_qq_group"
                    android:textColor="@color/text_h"
                    android:textSize="@dimen/size_xl" />

                <TextView
                    android:id="@+id/tv_qq_group_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#33333333"
                    android:gravity="right"
                    android:padding="@dimen/space"
                    android:text="@string/about_qq_group_num"
                    android:textColor="@color/text_h"
                    android:textSize="@dimen/size_l" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/space_1dp"
                android:background="@color/color_seperator" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/space_1dp"
                android:background="@color/color_seperator" />

            <LinearLayout
                android:id="@+id/ll_wx"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clickable="true"
                android:padding="@dimen/space_2x" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/about_wx"
                    android:textColor="@color/text_h"
                    android:textSize="@dimen/size_xl" />

                <TextView
                    android:id="@+id/tv_wx_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#33333333"
                    android:gravity="right"
                    android:padding="@dimen/space"
                    android:text="@string/about_wx_num"
                    android:textColor="@color/text_h"
                    android:textSize="@dimen/size_xl" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/space_1dp"
                android:background="@color/color_seperator" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/space_1dp"
                android:background="@color/color_seperator" />

            <LinearLayout
                android:id="@+id/ll_app_version"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clickable="true"
                android:padding="@dimen/space_2x" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/about_app_version"
                    android:textColor="@color/text_h"
                    android:textSize="@dimen/size_xl" />

                <TextView
                    android:id="@+id/tv_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_h"
                    android:textSize="@dimen/size_xl" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/space_1dp"
                android:background="@color/color_seperator" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>