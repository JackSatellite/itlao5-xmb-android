<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.e7yoo.e7.FriendActivity">

    <include
        android:id="@+id/titleBar"
        layout="@layout/titlebar" />

    <LinearLayout
        android:id="@+id/friend_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/space_2x"
        android:layout_below="@id/titleBar" >

        <TextView
            android:id="@+id/friend_top_recommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_circle_text"
            android:gravity="center"
            android:paddingBottom="@dimen/space_half"
            android:paddingLeft="@dimen/space_3x"
            android:paddingRight="@dimen/space_3x"
            android:paddingTop="@dimen/space_half"
            android:text="@string/friend_top_recommended"
            android:textColor="@color/circle_text_selector"
            android:textSize="@dimen/size_l" />

        <TextView
            android:id="@+id/friend_top_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_4x"
            android:background="@drawable/rounded_corners_circle_text"
            android:gravity="center"
            android:paddingBottom="@dimen/space_half"
            android:paddingLeft="@dimen/space_3x"
            android:paddingRight="@dimen/space_3x"
            android:paddingTop="@dimen/space_half"
            android:text="@string/friend_top_attention"
            android:textColor="@color/circle_text_selector"
            android:textSize="@dimen/size_l" />

        <TextView
            android:id="@+id/friend_top_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_4x"
            android:background="@drawable/rounded_corners_circle_text"
            android:gravity="center"
            android:paddingBottom="@dimen/space_half"
            android:paddingLeft="@dimen/space_3x"
            android:paddingRight="@dimen/space_3x"
            android:paddingTop="@dimen/space_half"
            android:text="@string/friend_top_fans"
            android:textColor="@color/circle_text_selector"
            android:textSize="@dimen/size_l" />

    </LinearLayout>

    <View
        android:id="@+id/friend_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1dp"
        android:layout_below="@id/friend_top"
        android:background="@color/backgroud" />

    <android.support.v4.view.ViewPager
        android:id="@+id/friend_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/friend_line" />

</RelativeLayout>
