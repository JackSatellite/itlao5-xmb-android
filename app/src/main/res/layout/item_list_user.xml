<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_tag_white"
    android:padding="@dimen/space_2x">

    <ImageView
        android:id="@+id/item_list_user_icon"
        android:layout_width="@dimen/item_robot_icon"
        android:layout_height="@dimen/item_robot_icon"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon" />

    <TextView
        android:id="@+id/item_list_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_3x"
        android:layout_toLeftOf="@+id/item_list_user_attention"
        android:layout_toRightOf="@id/item_list_user_icon"
        android:includeFontPadding="false"
        android:text="@string/mengmeng"
        android:textColor="@color/text"
        android:textSize="@dimen/size_3xl" />

    <TextView
        android:id="@+id/item_list_user_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_list_user_name"
        android:layout_below="@id/item_list_user_name"
        android:layout_marginBottom="@dimen/space"
        android:includeFontPadding="false"
        android:text=""
        android:textColor="@color/text_l"
        android:textSize="@dimen/size_l"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/item_list_user_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:src="@mipmap/circle_attention" />
</RelativeLayout>