<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_tag_white"
    android:padding="@dimen/space_2x">

    <com.e7yoo.e7.view.CircleImageView
        android:id="@+id/item_feed_item_icon"
        android:layout_width="@dimen/item_feed_item_icon"
        android:layout_height="@dimen/item_feed_item_icon"
        android:src="@mipmap/icon"
        app:civ_border_color="@color/white_translucent"
        app:civ_border_overlay="false"
        app:civ_border_width="@dimen/space_half"
        app:civ_fill_color="@color/white" />

    <ImageView
        android:id="@+id/item_feed_item_sex"
        android:layout_width="@dimen/item_robot_sex"
        android:layout_height="@dimen/item_robot_sex"
        android:layout_marginLeft="@dimen/space_2x"
        android:layout_toRightOf="@id/item_feed_item_icon"
        android:src="@mipmap/sex_female_selected" />

    <TextView
        android:id="@+id/item_feed_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space"
        android:layout_toRightOf="@id/item_feed_item_sex"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="@string/mengmeng"
        android:textColor="@color/text_l"
        android:textSize="@dimen/size_xl" />

    <TextView
        android:id="@+id/item_feed_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_feed_item_sex"
        android:layout_below="@id/item_feed_item_username"
        android:layout_marginTop="@dimen/space"
        android:text="@string/mengmeng"
        android:textColor="@color/text_l"
        android:textSize="@dimen/size_s" />

    <TextView
        android:id="@+id/item_feed_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_feed_item_sex"
        android:layout_below="@id/item_feed_item_time"
        android:layout_marginBottom="@dimen/space"
        android:layout_marginTop="@dimen/space_2x"
        android:autoLink="web"
        android:includeFontPadding="false"
        android:maxLines="5"
        android:text=""
        android:textColor="@color/text"
        android:textSize="@dimen/size_l" />

    <TextView
        android:id="@+id/item_feed_item_source_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_feed_item_sex"
        android:layout_below="@id/item_feed_item_content"
        android:background="@color/backgroud_feedback_detail_source_feeditem"
        android:autoLink="web"
        android:includeFontPadding="false"
        android:maxLines="5"
        android:text=""
        android:textColor="@color/text"
        android:padding="@dimen/space_2x"
        android:textSize="@dimen/size_l" />

    <!--<TextView
        android:id="@+id/item_feed_item_content_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_feed_item_sex"
        android:layout_below="@id/item_feed_item_content"
        android:includeFontPadding="false"
        android:text=""
        android:textColor="@color/text"
        android:textSize="@dimen/size_l"
        android:autoLink="web"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/item_feed_item_more_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_feed_item_sex"
        android:layout_below="@id/item_feed_item_content_more"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/item_feed_item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space"
            android:layout_marginTop="@dimen/space"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="@string/feed_detail_more_open"
            android:textColor="@color/text_l"
            android:textSize="@dimen/size_xs"
            android:drawableLeft="@mipmap/feed_detail_more_open"
            android:drawablePadding="@dimen/space_half"
            android:gravity="center_vertical"/>
    </LinearLayout>-->
    <LinearLayout
        android:id="@+id/item_feed_item_url_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_feed_item_sex"
        android:layout_below="@id/item_feed_item_source_content"
        android:gravity="right">

        <TextView
            android:id="@+id/item_feed_item_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space"
            android:layout_marginTop="@dimen/space"
            android:drawableLeft="@mipmap/feed_detail_url"
            android:drawablePadding="@dimen/space_half"
            android:gravity="right"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="@string/feed_detail_url"
            android:textColor="@color/blue_1296db"
            android:textSize="@dimen/size_m" />
    </LinearLayout>

    <com.e7yoo.e7.view.CircleGridView
        android:id="@+id/item_feed_item_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_feed_item_sex"
        android:layout_below="@id/item_feed_item_url_layout"
        android:paddingTop="@dimen/space"
        android:focusable="false"
        android:horizontalSpacing="@dimen/space"
        android:verticalSpacing="@dimen/space" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_feed_item_sex"
        android:layout_below="@id/item_feed_item_gv"
        android:layout_marginTop="@dimen/space"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_feed_item_share2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/circle_feed_item_share2_selector"
                android:drawablePadding="@dimen/space_2x"
                android:gravity="center"
                android:padding="@dimen/space"
                android:text="@string/mengmeng"
                android:textColor="@color/text_l"
                android:textSize="@dimen/size_s" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_feed_item_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/circle_feed_item_share_selector"
                android:drawablePadding="@dimen/space_2x"
                android:gravity="center"
                android:padding="@dimen/space"
                android:text="@string/mengmeng"
                android:textColor="@color/text_l"
                android:textSize="@dimen/size_s" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_feed_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/circle_feed_item_comment_selector"
                android:drawablePadding="@dimen/space_2x"
                android:gravity="center"
                android:padding="@dimen/space"
                android:text="@string/mengmeng"
                android:textColor="@color/text_l"
                android:textSize="@dimen/size_s" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_feed_item_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/circle_feed_item_praise_selector"
                android:drawablePadding="@dimen/space_2x"
                android:gravity="center"
                android:padding="@dimen/space"
                android:text="@string/mengmeng"
                android:textColor="@color/text_l"
                android:textSize="@dimen/size_s" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>