<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/space" >

    <ImageView
        android:id="@+id/list_news_iv1"
        android:layout_width="@dimen/list_news_width"
        android:layout_height="@dimen/list_news_height"
        android:padding="@dimen/space"
        android:textColor="@color/text_h" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_news_height"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/space_2x" >

        <TextView
            android:id="@+id/list_news_title"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1"
            android:maxLines="2"
            android:textColor="@color/text_h"
            android:textSize="@dimen/size_xl" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/list_news_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_l"
                android:singleLine="true"
                android:textSize="@dimen/size_m" />

            <TextView
                android:id="@+id/list_news_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_l"
                android:textSize="@dimen/size_m"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>