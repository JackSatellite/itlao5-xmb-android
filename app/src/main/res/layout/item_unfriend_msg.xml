<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroud" >
    <RelativeLayout
        android:id="@+id/item_unfriend_msg_lyout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_3x"
        android:background="@drawable/item_selector">


        <TextView
            android:id="@+id/item_unfriend_msg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_unfriend_msg_point"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_2x"
            android:text="@string/mengmeng"
            android:textColor="@color/text_h"
            android:textSize="@dimen/size_2xl" />

        <TextView
            android:id="@+id/item_unfriend_msg_point"
            android:layout_width="@dimen/item_unfriend_msg_point"
            android:layout_height="@dimen/item_unfriend_msg_point"
            android:layout_toLeftOf="@+id/array"
            android:layout_centerVertical="true"
            android:background="@drawable/point"
            android:text="99"
            android:textColor="@color/white"
            android:textSize="@dimen/size_xs"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/array"
            android:layout_width="@dimen/array"
            android:layout_height="@dimen/array"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <View
        android:id="@+id/item_unfriend_msg_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_3x"
        android:background="@color/backgroud"
        android:layout_below="@id/item_unfriend_msg_lyout"/>
</RelativeLayout>